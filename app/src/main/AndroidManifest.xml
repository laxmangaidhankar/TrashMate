<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/applogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GoGreen"
        tools:targetApi="31">
        <activity
            android:name=".splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.razorpay.CheckoutActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            tools:replace="android:theme" />

        <activity android:name=".ProfileActivity" />
        <activity android:name=".TermsActivity" />
        <activity android:name=".HelpActivity" />
        <activity android:name=".HelpDetailActivity" />
        <activity android:name=".HelpCategoryActivity" />

        <activity android:name=".HomeActivity" />
        <activity android:name=".ActivityMyPickups" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".BagActivity" />
        <activity android:name=".OtpActivity" />
        <activity android:name=".SubscriptionActivity" />

        <activity android:name=".ContactUsActivity" />

    </application>

</manifest>