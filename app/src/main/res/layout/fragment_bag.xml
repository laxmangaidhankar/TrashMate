<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7FBF7"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- Bag Image -->
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="Bag Image"
            android:scaleType="fitCenter"
            android:src="@drawable/bags" />

        <!-- Bag Name -->
        <TextView
            android:id="@+id/tvBagName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Bag Name"
            android:textColor="#2B5912"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvBagDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Capacity: 5kg | Material: Biodegradable"
            android:textColor="#666"
            android:textSize="16sp" />

        <!-- Price -->
        <TextView
            android:id="@+id/tvBagPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="â‚¹20"
            android:textColor="#388E3C"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Quantity Selector -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMinus"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="#FFFFFF"
                android:text="-"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="12dp"
                android:gravity="center"
                android:text="1"
                android:textColor="#212121"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnPlus"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="#FFFFFF"
                android:text="+"
                android:textColor="#000000"
                android:textSize="20sp" />

        </LinearLayout>

        <!-- Buy Now -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#2B5912"
            android:padding="12dp"
            android:text="Buy Now"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>
</ScrollView>